{
    "name": "Doodle Pad",
    "version": "1.0.0",
    "description": "Doodle Pad Canvas - Draw in your browser!",
    "manifest_version": 3,
    "author": "Dylan Belyk",
    "action": {
        "default_popup": "index.html",
        "default_title": "Doodle Pad"
    },
    "icons": {
        "16": "Assets/icon16.png",
        "32": "Assets/icon32.png",
        "48": "Assets/icon48.png",
        "128": "Assets/icon128.png"
    },
    "permissions": [
        "activeTab"
      ],      
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "run_at": "document_end",
          "css": ["styles.css"]
        }
      ]
}
